#!/bin/bash -e

if [ $(id -u) -eq 0 ]; then
    mkdir -p $SNAP_COMMON/etc/glance.conf.d
    sed -e "s|__SNAP_DATA__|$SNAP_COMMON|g" \
        -e "s|__SNAP__|$SNAP|g" \
        $SNAP/templates/glance/glance-snap.conf > $SNAP_COMMON/etc/glance.conf.d/glance-snap.conf
fi

exec /usr/bin/env "$1" --config-file=$SNAP/etc/glance/$1.conf --config-dir=$SNAP_COMMON/etc/glance.conf.d "${@:2}"
